<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.GridPane?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.TextArea?>
<GridPane xmlns="http://javafx.com/javafx"
          xmlns:fx="http://javafx.com/fxml"
          fx:controller="Client.Controllers.GUIController"
          prefHeight="600.0" prefWidth="800.0" hgap="10" vgap="10">
    <padding><Insets top="25" right="25" left="25" bottom="25"/></padding>

    <Button onAction="#Connect" text="Reconnect" GridPane.columnIndex="6" GridPane.rowIndex="1"/>

    <Label text="Search author" GridPane.columnIndex="7" GridPane.rowIndex="2"/>
    <TextField fx:id="AuthorToSearch" GridPane.columnIndex="7" GridPane.rowIndex="3"/>
    <Button onAction="#Search" text="Search" GridPane.columnIndex="7" GridPane.rowIndex="4"/>

    <Label text="Result" GridPane.columnIndex="1" GridPane.rowIndex="0"/>
    <TextArea fx:id="result" maxWidth="300" prefHeight="700" maxHeight="700" GridPane.rowIndex="0" GridPane.columnIndex="0" GridPane.columnSpan="3" GridPane.rowSpan="11"/>

    <Label text="Name" GridPane.columnIndex="5" GridPane.rowIndex="1"/>
    <TextField fx:id="Name" GridPane.columnIndex="5" GridPane.rowIndex="2"/>

    <Label text="Author" GridPane.columnIndex="5" GridPane.rowIndex="3"/>
    <TextField fx:id="Author" GridPane.columnIndex="5" GridPane.rowIndex="4"/>

    <Label text="Genre" GridPane.columnIndex="5" GridPane.rowIndex="5"/>
    <TextField fx:id="Genre" GridPane.columnIndex="5" GridPane.rowIndex="6"/>

    <Label text="Year" GridPane.columnIndex="5" GridPane.rowIndex="7"/>
    <TextField fx:id="Year" GridPane.columnIndex="5" GridPane.rowIndex="8"/>
    <Button onAction="#Send" text="Send" GridPane.columnIndex="5" GridPane.rowIndex="9"/>
</GridPane>
